	.container
		//- intro
		h1 Phục hồi da lão hóa
		.intro
			p Lão hóa là tiến trình diễn ra theo thời gian và không thể quay lại được. Chúng ta sẽ nhận thấy quá trình lão hóa da thay đổi qua dáng vẻ bên ngoài, màu sắc và cấu trúc khác nhau của da. Qúa trình lão hóa được chia ra làm 4 giai đoạn:
		//- body
		.row
			ul.timeline
				//- phase 1
				li.timeline-item
					.timeline-info
						span GIAI ĐOẠN 1
					.timeline-marker
					.timeline-content
						.row
							.col-md-5
								a.item-news-read(href="./img/parisbeautyspa/beautify-service-detail/beautify_service_detail_1.png")
								figure
									img(src="./img/parisbeautyspa/beautify-service-detail/beautify_service_detail_1.png", alt="Lorem ipsum dolor, sit amet consectetur adipisicing elit.")
							.col-md-7
								p Theo sự nghiên cứu của các nhà khoa học thì tiến trình lão hóa da sẽ bắt đầu từ năm 20 tuổi nhưng khó nhận thấy vì chưa có biểu hiện rõ trên bề mặt da. Nếu da không được chăm sóc đúng cách hoặc không sử dụng sản phẩm bảo vệ khi ra ngoài nắng, ăn uống thiếu chất thì tiến trình lão hóa có thể diễn ra sớm hơn. Qúa trình lão hóa diễn ra bởi tác động của gốc tự do và sự tăng sự oxy hóa, làm cho da bị sẫm màu, cấu trúc tế bào bi tổn thương, lương axit amin, hàm lượng protein giảm dần, màng lipid bắt đầu suy yếu dẫn đến viêc thất thoát nước trên bề mặt da gây ra sự khô da, mất nước sâu. Nếp nhăn li ti bắt đầu xuất hiện.
				//- phase 2
				li.timeline-item
					.timeline-info
						span GIAI ĐOẠN 2
					.timeline-marker
					.timeline-content
						p Tình trạng lão hóa nhận thấy rõ hơn ở độtuổi 30 - 40. Thời điểm này hoocmon  thường bị mất cân bằng làm cho khả năng tự phục hồi của cơ thể bị suy yếu. Các tế bào và khả năng tổng hợp nguyên bào sợi hình thành collagen và sợi đàn hồi elastin giảm dần làm cho da mỏng, yếu, mất độ săn chắc và đàn hồi, tăng độ sâu của nếp nhăn.
						p Để có làn da đẹp mãi tuổi đôi mươi, chúng ta nên có một chế độ chăm sóc da phù hợp, sử dụng mỹ phẩm chính hãng, an toàn và có chế độ ăn uống sinh hoạt hợp lý. Ăn đầy đủ chất nhất là các loại trái cây giàu vitamin, chất chống oxy hóa, không thức khuya, không sử dụng chất kích thích, tập thể dục đều đặn.
						p Tại PB chúng tôi đã chọn lọc và kết hợp giữa mỹ phẩm từ thiên nhiên và công nghệ tiên tiến nhất để mang đến cho quý khách những liệu trình ngăn ngừa sự lão hóa và làm tươi trẻ cho làn da.
						//- box
						.row
							-var i = 2
							-var j = 1
							each val in ['Liệu trình COCOON kích hoạt tăng sinh tế bào', 'MODELLING làm săn chắc, ngăn ngừa lão hóa cho mọi làn da', '360o liệu pháp làm săn chắc, đàn hồi cho làn da', 'Mesoprof ngăn ngừa lão hóa, xóa nếp nhăn, căng bóng làn da']
								.col-sm-6.col-lg-3
									a.item(href="javascript:void(0)")
										figure.box
											img(src="./img/parisbeautyspa/beautify-service-detail/beautify_service_detail_"+i+".png", alt="alt")
											figcaption.match
												p.orderlist= j+'.'
												p= val
												- i++
												- j++
						p.lead.my-4 Chế độ chăm sóc da tại nhà để luôn có làn da khỏe đẹp
